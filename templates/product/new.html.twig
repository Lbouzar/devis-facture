{% extends 'base.html.twig' %}

{% block title %}Create New Product{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto p-5">
    <h1 class="text-xl font-bold mb-4">New Product</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

    <div>
        <label for="product_name" class="block text-sm font-medium text-gray-700">Product Name</label>
        {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full p-2 border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
        {{ form_errors(form.name) }}
    </div>

    <div>
        <label for="product_description" class="block text-sm font-medium text-gray-700">Product description</label>
        {{ form_widget(form.description, {'attr': {'class': 'mt-1 block w-full p-2 border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="flex justify-end mt-4">
        {{ form_widget(form.save, {'attr': {'class': 'px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600'}}) }}
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
