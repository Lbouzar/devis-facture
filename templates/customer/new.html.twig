

{% block title %}Customer{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto p-5">
    <h1 class="text-xl font-bold mb-4">Customer New</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

    <div>
        <label for="customer_name" class="block text-sm font-medium text-gray-700">Name</label>
        {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full p-2 border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
        {{ form_errors(form.name) }}
    </div>

    <div>
        <label for="customer_email" class="block text-sm font-medium text-gray-700">Email</label>
        {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full p-2 border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
        {{ form_errors(form.email) }}
    </div>

    <div>
        <label for="customer_phone" class="block text-sm font-medium text-gray-700">Phone</label>
        {{ form_widget(form.phone, {'attr': {'class': 'mt-1 block w-full p-2 border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
        {{ form_errors(form.phone) }}
    </div>
   

    <div>
        <label for="customer_address" class="block text-sm font-medium text-gray-700">Address</label>
        {{ form_widget(form.address, {'attr': {'class': 'mt-1 block w-full p-2 border-gray-300 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
        {{ form_errors(form.address) }}
    </div>


    <div class="flex justify-end mt-4">
        {{ form_widget(form.save, {'attr': {'class': 'px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600'}}) }}
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
